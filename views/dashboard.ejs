<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Call Log Admin Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1400px;
            margin: 0 auto;
        }

        .header {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            margin-bottom: 30px;
        }

        .header h1 {
            color: #333;
            margin-bottom: 10px;
        }

        .header p {
            color: #666;
        }

        .nav {
            display: flex;
            gap: 10px;
            margin-top: 20px;
        }

        .nav a {
            padding: 10px 20px;
            background: #667eea;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            transition: background 0.3s;
        }

        .nav a:hover {
            background: #764ba2;
        }

        .nav a.active {
            background: #764ba2;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: white;
            padding: 25px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }

        .stat-card h3 {
            color: #666;
            font-size: 14px;
            margin-bottom: 10px;
            text-transform: uppercase;
        }

        .stat-card .number {
            color: #333;
            font-size: 36px;
            font-weight: bold;
        }

        .chart-container {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            margin-bottom: 30px;
        }

        .chart-container h2 {
            margin-bottom: 20px;
            color: #333;
        }

        .chart-bar {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
        }

        .chart-label {
            width: 150px;
            font-weight: 600;
            color: #333;
        }

        .chart-bar-fill {
            flex: 1;
            height: 30px;
            background: #667eea;
            border-radius: 5px;
            position: relative;
            margin-right: 10px;
        }

        .chart-bar-fill span {
            position: absolute;
            right: 10px;
            line-height: 30px;
            color: white;
            font-weight: bold;
        }

        .table-container {
            background: white;
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            overflow-x: auto;
        }

        table {
            width: 100%;
            border-collapse: collapse;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #eee;
        }

        th {
            background: #f8f9fa;
            font-weight: 600;
            color: #333;
        }

        tr:hover {
            background: #f8f9fa;
        }

        .badge {
            padding: 5px 10px;
            border-radius: 5px;
            font-size: 12px;
            font-weight: 600;
        }

        .badge-incoming { background: #d4edda; color: #155724; }
        .badge-outgoing { background: #d1ecf1; color: #0c5460; }
        .badge-missed { background: #f8d7da; color: #721c24; }
        .badge-rejected { background: #f8d7da; color: #721c24; }

        .loading {
            text-align: center;
            padding: 40px;
            color: #666;
        }

        .search-box {
            margin-bottom: 20px;
        }

        .search-box input {
            width: 100%;
            padding: 12px;
            border: 2px solid #e0e0e0;
            border-radius: 8px;
            font-size: 16px;
        }

        .search-box input:focus {
            outline: none;
            border-color: #667eea;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>ðŸ“± Call Log Admin Dashboard</h1>
            <p>Enterprise Call Monitoring System</p>
            <div class="nav">
                <a href="/" class="active">Dashboard</a>
                <a href="/devices">Devices</a>
                <a href="/logs">All Logs</a>
            </div>
        </div>

        <div class="stats-grid" id="statsGrid">
            <div class="stat-card">
                <h3>Total Devices</h3>
                <div class="number" id="totalDevices">-</div>
            </div>
            <div class="stat-card">
                <h3>Total Call Logs</h3>
                <div class="number" id="totalCallLogs">-</div>
            </div>
            <div class="stat-card">
                <h3>Incoming Calls</h3>
                <div class="number" id="incomingCalls">-</div>
            </div>
            <div class="stat-card">
                <h3>Outgoing Calls</h3>
                <div class="number" id="outgoingCalls">-</div>
            </div>
        </div>

        <div class="chart-container">
            <h2>Call Distribution by Type</h2>
            <div id="callTypeChart">
                <div class="loading">Loading statistics...</div>
            </div>
        </div>

        <div class="table-container">
            <h2>Top Contacted Numbers</h2>
            <div class="search-box">
                <input type="text" id="numberSearch" placeholder="Search for a specific phone number...">
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Phone Number</th>
                        <th>Contact Name</th>
                        <th>Total Calls</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody id="topContactsTable">
                    <tr>
                        <td colspan="4" class="loading">Loading data...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        // Fetch and display statistics
        async function loadStatistics() {
            try {
                const response = await fetch('/api/statistics');
                const stats = await response.json();
                console.log('Statistics:', stats);

                // Update stat cards
                document.getElementById('totalDevices').textContent = stats.totalDevices;
                document.getElementById('totalCallLogs').textContent = stats.totalCallLogs;

                // Update call type stats
                let incoming = 0, outgoing = 0;
                stats.callsByType.forEach(item => {
                    if (item.call_type === 'INCOMING') incoming = item.count;
                    if (item.call_type === 'OUTGOING') outgoing = item.count;
                });
                document.getElementById('incomingCalls').textContent = incoming;
                document.getElementById('outgoingCalls').textContent = outgoing;

                // Create chart
                const chartDiv = document.getElementById('callTypeChart');
                chartDiv.innerHTML = '';
                const maxCount = Math.max(...stats.callsByType.map(item => item.count));
                
                stats.callsByType.forEach(item => {
                    const percentage = (item.count / maxCount) * 100;
                    const bar = document.createElement('div');
                    bar.className = 'chart-bar';
                    bar.innerHTML = `
                        <div class="chart-label">${item._id}</div>
                        <div class="chart-bar-fill" style="width: ${percentage}%">
                            <span>${item.count}</span>
                        </div>
                    `;
                    chartDiv.appendChild(bar);
                });

                // Update top contacts table
                const tableBody = document.getElementById('topContactsTable');
                tableBody.innerHTML = '';
                
                stats.topContacts.forEach(contact => {
                    const row = document.createElement('tr');
                    row.innerHTML = `
                        <td>${contact._id}</td>
                        <td>${contact.contactName || 'Unknown'}</td>
                        <td>${contact.count}</td>
                        <td><a href="/logs/${encodeURIComponent(contact.phoneNumber)}" style="color: #667eea;">View Details</a></td>
                    `;
                    tableBody.appendChild(row);
                });
            } catch (error) {
                console.error('Error loading statistics:', error);
            }
        }

        // Search for specific number
        document.getElementById('numberSearch').addEventListener('keypress', function(e) {
            if (e.key === 'Enter') {
                const phoneNumber = this.value.trim();
                if (phoneNumber) {
                    window.location.href = `/logs/${encodeURIComponent(phoneNumber)}`;
                }
            }
        });

        // Load data on page load
        loadStatistics();

        // Refresh every 30 seconds
        setInterval(loadStatistics, 30000);
    </script>
</body>
</html>
